// backdrop slides
.blastoff.bespoke-backdrop-active
  background-image url(../images/icanhaz-blastoff.gif)
  background-size cover
  width 100%
  height 100%

.oldtimes.bespoke-backdrop-active
  background-image url(../images/old-movie-texture.gif)
  background-size cover
  width 100%
  height 100%

.resolution
  opacity  0
  transition all 100ms cubic-bezier(0.175, 0.885, 0.320, 1.275)
  transform translateY(100%)
  &.resolution-shown
    opacity 1
    transform translateY(0)

.pudim.bespoke-backdrop
  opacity 0
  transform translate3d(0, 5%, 0)
  transition opacity 200ms ease 500ms, transform 200ms ease 500ms
.pudim.bespoke-backdrop-active
  background-image url(../images/pudim.jpg)
  background-size cover
  background-position 50% 0%
  opacity 1
  transform translate3d(0, 0, 0)
  width 100%
  height 100%

.divitite.bespoke-backdrop
  opacity 0
  transform translate3d(0, 5%, 0)
  transition opacity 200ms ease 500ms, transform 200ms ease 500ms
.divitite.bespoke-backdrop-active
  background-image url(../images/divitities.png)
  background-size cover
  background-position 50% 0%
  opacity 1
  transform translate3d(0, 0, 0)
  width 100%
  height 100%

.old-paper.bespoke-backdrop-active
  background-image url(../images/old-paper.jpg)
  background-size cover
  width 100%
  height 100%
  opacity .6

.shiny.bespoke-backdrop-active
  position relative
  width 100%
  height 100%
  &::before
    content " "
    position absolute
    top -75%
    left -75%
    right -75%
    bottom -75%
    background-image url(../images/shiny.jpg)
    background-size contain
    background-position 50% 50%
    opacity 0.5
    animation girando 360s linear 0s infinite


@keyframes girando
  from
    transform rotateZ(0)
  to
    transform rotateZ(1turn)
