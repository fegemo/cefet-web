#spec-tabajara-input
  padding: 4px 8px;
  font-family: monospace;
  font-size: 30px;
  border: 1px solid silver;
  box-shadow: 3px 3px 3px rgba(0,0,0,0.1);

#spec-tabajara-button
  font-size: 24px;
  border-radius: 2px;
  border: 1px solid silver;
  padding: 10px 25px;
  background-color: whitesmoke;
  cursor pointer
  box-shadow 2px 2px 4px #0002
  transition all 100ms ease
  &:active
    transform translate(2px, 2px)
    box-shadow 0px 0px 4px #0002
  &:hover
    border-color #333

#spec-tabajara > div
  margin-bottom 20px
  text-align center

.spec-class
  width 150px
  height @width
  display inline-block
  float left
  text-align center
  font-size 0.7em

  &:nth-child(1)
    background-color cornflowerblue
    border 2px solid darken(@background-color, 20%)
    color darken(@background-color, 60%)
    transform-origin 100% 100%
    transform rotate3d(0, 0, 1, -30deg)
    border-radius (@width/2) (@width/2) 0 (@width/2)

  &:nth-child(2)
    background-color coral
    border 2px solid darken(@background-color, 20%)
    color darken(@background-color, 60%)
    border-radius (@width/2) (@width/2) 0 0

  &:nth-child(3)
    background-color darkorchid
    border 2px solid darken(@background-color, 20%)
    color darken(@background-color, 60%)
    transform-origin 0 100%
    transform rotate3d(0, 0, 1, 30deg)
    border-radius (@width/2) (@width/2) (@width/2) 0


  .spec-output
    display block
    margin-top .125em
    height 1.5em
    font-size 50px
