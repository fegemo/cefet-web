{
  "env": {
    "node": true,
    "browser": true,
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "spread": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "eslint:recommended",
  "rules": {
    "eqeqeq": "warn",
    "quotes": ["error", "single"],
    "no-extra-semi": "error",
    "indent": ["error", 2],
    "no-var": "error",
    "camelcase": "error",
    "semi": ["error", "never"],
    "no-shadow": "warn"
  }
}